#!/usr/bin/python3
"""Class square that defines a square."""


class Square:
    """ Defines a square."""
    def __init__(self, size=0):
        """ Initializes a private attribute. """
        self.__size = size
        def get_size(self):

            return self.__size

        def set_size(self, size):

            if size.isinteger():
                try:
                    return self.__size
                except TypeError
                print("size must be an integer")
                if size < 0:
                    raise ValueError
                print("size must be >= 0")
